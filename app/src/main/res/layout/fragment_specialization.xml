<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.raja.knowme.widgets.AppTextView
        android:id="@+id/specialization_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:gravity="end"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:text="@string/spec"
        android:textColor="#FF3FB3D6"
        android:textSize="@dimen/header_text_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/specialization_header_text"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/specialization_container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</RelativeLayout>